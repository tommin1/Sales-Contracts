@page
@model Sales_Contracts.Pages.UserCustomer.IndexModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
	ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
	<a asp-page="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				No.
			</th>
			<th>
				Name
			</th>
			<th>
				Address
			</th>
			<th>
				Post Code
			</th>
			<th>
				City
			</th>
			<th>
				Country/Region code
			</th>
			<th>
				Primary Contact No.
			</th>
			<th>
				Contact Name
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@{
			ApplicationUser user = new ApplicationUser();
			user = await UserManager.FindByNameAsync(User.Identity.Name);
		}
		@foreach (var item in Model.Customer.Where(n => n.No == user.CustomerNo))
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.No)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Address)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Post_Code)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.City)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Country_Region_Code)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Primary_Contact_No)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ContactName)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.No">Edit</a> |
					<a asp-page="./Details" asp-route-id="@item.No">Details</a> |
					<a asp-page="./Delete" asp-route-id="@item.No">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
